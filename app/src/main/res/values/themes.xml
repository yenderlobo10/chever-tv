<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Chever" parent="@style/Theme.Leanback">

        <item name="android:colorPrimary">@color/secondaryColor</item>
        <item name="android:colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <item name="android:colorBackground">@color/darkColor</item>
        <item name="colorOnBackground">@color/secondaryTextColor</item>

        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <!-- Theme leanback details -->
    <style name="Theme.Chever.Details">
        <item name="android:windowEnterTransition">@transition/lb_details_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/lb_details_return_transition</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/lb_shared_element_enter_transition
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/lb_shared_element_return_transition
        </item>
    </style>

    <!-- Theme leanback guided step -->
    <style name="Theme.Chever.TorrentSelect" parent="Theme.Leanback.GuidedStep">
        <item name="guidedStepBackground">@color/secondaryDarkColor</item>
        <item name="guidedActionsBackground">@color/secondaryColor</item>
        <item name="guidanceContainerStyle">@style/Theme.Chever.TorrentSelect.Container</item>
        <item name="guidanceIconStyle">@style/Theme.Chever.TorrentSelect.Icon</item>
        <item name="guidanceTitleStyle">@style/Theme.Chever.TorrentSelect.Title</item>
        <item name="guidanceBreadcrumbStyle">@style/Theme.Chever.TorrentSelect.Breadcrumb</item>
        <item name="guidanceDescriptionStyle">@style/Theme.Chever.TorrentSelect.Description</item>
        <item name="guidedActionsListStyle">@style/Theme.Chever.TorrentSelect.ActionsContainer
        </item>
        <item name="guidedActionItemIconStyle">@style/Theme.Chever.TorrentSelect.ActionIcon</item>
        <item name="guidedActionItemTitleStyle">@style/Theme.Chever.TorrentSelect.ActionTitle</item>
        <item name="guidedActionItemDescriptionStyle">
            @style/Theme.Chever.TorrentSelect.ActionDescription
        </item>
    </style>

    <!-- Theme loader dialog -->
    <style name="Theme.Chever.LoaderDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/windowBackgroundDimColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <!-- Theme leanback preference -->

    <style name="Theme.Chever.LeanbackPreferences">
        <item name="preferenceTheme">@style/CheverPreferenceTheme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CheverPreferenceTheme" parent="PreferenceThemeOverlayLeanback">
        <item name="defaultBrandColor">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/darkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:colorAccent">@color/primaryColor</item>
    </style>

    <!--#region Text styles -->

    <style name="TextAppearance" />

    <style name="TextAppearance.Leanback">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display3" parent="TextAppearance.AppCompat.Display3">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display4" parent="TextAppearance.AppCompat.Display4">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Caption.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <!--#endregion Text styles -->

    <!-- Splash-UI styles -->
    <style name="SplashTextViewLogoLetter" parent="TextAppearance.Display3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:visibility">invisible</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <!-- Movies-UI styles -->
    <style name="MovieItemChip" parent="TextAppearance.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/lightColor</item>
    </style>

    <!-- Torrent-UI styles -->

    <style name="Theme.Chever.TorrentSelect.Container" parent="Widget.Leanback.GuidanceContainerStyle">
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.Icon" parent="Widget.Leanback.GuidanceIconStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">175dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.Title" parent="Widget.Leanback.GuidanceTitleStyle">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_below">@id/none</item>
        <item name="android:layout_centerVertical">false</item>

    </style>

    <style name="Theme.Chever.TorrentSelect.Description" parent="Widget.Leanback.GuidanceDescriptionStyle">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:maxLines">12</item>
        <item name="android:gravity">fill</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.Breadcrumb" parent="Widget.Leanback.GuidanceBreadcrumbStyle" />

    <style name="Theme.Chever.TorrentSelect.ActionsContainer" parent="Widget.Leanback.GuidedActionsListStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.ActionIcon" parent="Widget.Leanback.GuidedActionItemIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.ActionTitle" parent="Widget.Leanback.GuidedActionItemTitleStyle">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Theme.Chever.TorrentSelect.ActionDescription" parent="Widget.Leanback.GuidedActionItemDescriptionStyle">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:alpha">0.66</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>