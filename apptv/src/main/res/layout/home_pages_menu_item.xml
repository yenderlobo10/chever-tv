<?xml version="1.0" encoding="utf-8"?>
<androidx.leanback.widget.NonOverlappingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/headerIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:tint="@color/lightColor"
        app:tint="@color/lightColor"
        tools:ignore="ContentDescription,UseAppTint"
        tools:src="@drawable/ic_android" />

    <TextView
        android:id="@+id/headerTitle"
        style="@style/TextAppearance.Leanback.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        tools:text="Title of item" />

</androidx.leanback.widget.NonOverlappingLinearLayout>