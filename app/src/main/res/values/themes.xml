    <!-- Splash-UI styles -->
    <style name="SplashTextViewLogoLetter" parent="TextAppearance.Display3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:visibility">invisible</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <!-- Movies-UI styles -->
    <style name="MovieItemChip" parent="TextAppearance.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
