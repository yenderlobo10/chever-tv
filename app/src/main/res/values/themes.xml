<resources>

    <style name="Theme.Chever" parent="@style/Theme.Leanback">

        <item name="android:colorPrimary">@color/secondaryColor</item>
        <item name="android:colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="android:colorAccent">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <item name="android:colorBackground">@color/darkColor</item>
        <item name="colorOnBackground">@color/secondaryTextColor</item>

        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <!-- Theme leanback details -->
    <style name="Theme.Chever.Details">
        <item name="android:windowEnterTransition">@transition/lb_details_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/lb_details_return_transition</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/lb_shared_element_enter_transition
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/lb_shared_element_return_transition
        </item>
    </style>

    <!-- Theme loader dialog -->
    <style name="Theme.Chever.LoaderDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/windowBackgroundDimColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:padding">0dp</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>


    <!--#region Text styles -->

    <style name="TextAppearance" />

    <style name="TextAppearance.Leanback">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display3" parent="TextAppearance.AppCompat.Display3">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Display4" parent="TextAppearance.AppCompat.Display4">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Caption.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <!--#endregion Text styles -->

    <!-- Splash-UI styles -->
    <style name="SplashTextViewLogoLetter" parent="TextAppearance.Display3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:visibility">invisible</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <!-- Movies-UI styles -->
    <style name="MovieItemChip" parent="TextAppearance.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/lightColor</item>
    </style>

</resources>